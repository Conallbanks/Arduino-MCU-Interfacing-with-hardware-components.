int led = 8;
void setup () {
 pinMode (led, OUTPUT);
}
void loop () {
for (int x=0; x<4; x++) {
digitalWrite(led, HIGH);
delay (200);
digitalWrite(led,LOW);
delay (200);
}
delay (1500);
for (int x=0; x<3; x++) {
digitalWrite(led, HIGH);
delay (200);
digitalWrite(led,LOW);
delay (200);
}
delay (1500);
for (int x=0; x<2; x++) {
digitalWrite(led, HIGH);
delay (200);
digitalWrite (led, LOW);
delay (200);
}
delay (1500);
for (int x=0; x<1; x++) {
digitalWrite (led, HIGH);
delay (200);
digitalWrite(led,LOW);
delay (200);
}
delay (1500);
}
